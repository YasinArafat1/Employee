@model IEnumerable<Class_13_Practices.Models.Employee>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-12 p-2">
        <div class="card border-info">
            <div class="card-header">
                <h4  class="card-title">Employee List</h4>
                <h6 class="card-subtitle d-flex justify-content-between text-muted">Manage Employee
                
                    <a href="@Url.Action("Create","Home")" class="btn btn-success"><i class="fa fa-plus"></i>Add Employee</a>
                </h6>
            </div>
            <div class="card-body">
               <table class="table table-bordered table-striped table-sm text-center">
                   <thead class="table-info">
                       <tr>
                           <th>@Html.DisplayNameFor(x=>x.Name)</th>
                           <th>@Html.DisplayNameFor(x=>x.Grade)</th>
                           <th>@Html.DisplayNameFor(x=>x.Department)</th>
                           <th>
                               Actions
                           </th>
                       </tr>
                   </thead>
                   <tbody>
                       @foreach (var item in Model)
                       {
                           <tr>
                               <td>@Html.DisplayFor(x=>item.Name)</td>
                               <td>@Html.DisplayFor(x=>item.Grade)</td>
                               <td>@Html.DisplayFor(x=>item.Department)</td>
                               <td>
                                   @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@class="btn btn-info"})
                                   @Html.ActionLink("Delete", "Delete", new {id=item.Id }, new {@class="btn btn-danger"})
                               </td>
                           </tr>
                       }
                   </tbody>

               </table>
            </div>
            <div class="card-footer">
                @Model.Count() Employees Found
            </div>
        </div>
    </div>
</div>
